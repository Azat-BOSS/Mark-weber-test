<section class="filter">
  <div class="filter__container">
    
    <div class="filter__block">
      <h5 class="medium-font filter__block-title">Количество комнат</h6>
      <div class="filter__btns-block">
        <button class="filter__btn bg-style medium-font">cтудия</button>
        <button class="filter__btn bg-style medium-font">1</button>
        <button class="filter__btn bg-style medium-font">2</button>
